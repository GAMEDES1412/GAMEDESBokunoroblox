
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()


local lp = game.Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")


local function notify(title, content, duration)
    Rayfield:Notify({
        Title = title or "‡πÅ‡∏à‡πâ‡∏á‡πÄ‡∏ï‡∏∑‡∏≠‡∏ô",
        Content = content or "‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°",
        Duration = duration or 4,
    })
end

-- ü™ü ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡∏´‡∏•‡∏±‡∏Å
local Window = Rayfield:CreateWindow({
    Name = "Boku No Roblox X GAMEDES",
    LoadingTitle = "‡∏¢‡∏¥‡∏ô‡∏î‡∏µ‡∏ï‡πâ‡∏≠‡∏ô‡∏£‡∏±‡∏ö...",
    LoadingSubtitle = "By GAMEDES",
    ConfigurationSaving = {
        Enabled = true,
        FolderName = "BNHAAutoScript",
        FileName = "AutoFarmQuest"
    },
    KeySystem = false
})

-- üìÅ ‡∏™‡∏£‡πâ‡∏≤‡∏á Tab ‡∏´‡∏•‡∏±‡∏Å
local MainTab = Window:CreateTab("‚öîÔ∏è Main")

-- üåæ ‡∏£‡∏∞‡∏ö‡∏ö Auto Farm
MainTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Callback = function(state)
        _G.AutoFarm = state

        task.spawn(function()
            while _G.AutoFarm do
                pcall(function()
                    if not lp.Character or not lp.Character:FindFirstChild("Humanoid") or lp.Character.Humanoid.Health <= 0 then
                        repeat task.wait(0.5) until lp.Character and lp.Character:FindFirstChild("Humanoid") and lp.Character.Humanoid.Health > 0
                        task.wait(1)
                    end

                    local targets = {}
                    for _, v in pairs(workspace.NPCs:GetDescendants()) do
                        if table.find({"Criminal"}, v.Name) and v:FindFirstChild("Humanoid") and v:FindFirstChild("HumanoidRootPart") then
                            if v.Humanoid.Health > 0 then
                                table.insert(targets, v)
                            end
                        end
                    end

                    for _, target in pairs(targets) do
                        if not _G.AutoFarm then break end
                        notify("‚öîÔ∏è Auto Farm", "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏à‡∏°‡∏ï‡∏µ: " .. target.Name, 2)

                        if lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") and lp.Character:FindFirstChild("Main") then
                            local hrp = lp.Character.HumanoidRootPart
                            local goalCFrame = target.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0)

                            local tween = TweenService:Create(hrp, TweenInfo.new(0.5, Enum.EasingStyle.Linear), {CFrame = goalCFrame})
                            tween:Play()
                            tween.Completed:Wait()

                            while _G.AutoFarm and target and target:FindFirstChild("Humanoid") and target.Humanoid.Health > 0 do
                                if not lp.Character or not lp.Character:FindFirstChild("Humanoid") or lp.Character.Humanoid.Health <= 0 then
                                    break
                                end

                                goalCFrame = target.HumanoidRootPart.CFrame * CFrame.new(0, 5, 0)
                                tween = TweenService:Create(hrp, TweenInfo.new(0.1, Enum.EasingStyle.Linear), {CFrame = goalCFrame})
                                tween:Play()
                                tween.Completed:Wait()

                                local args = {
                                    Vector3.new(-132.359, 406.304, 3879.485),
                                    workspace:WaitForChild("NewOrganized"):WaitForChild("Useless7")
                                        :WaitForChild("New Destroyed City"):WaitForChild("City")
                                        :WaitForChild("Parking Garage"):WaitForChild("Part")
                                }
                                lp.Character.Main.Swing:FireServer(unpack(args))
                                task.wait(0.1)
                            end
                        end
                    end
                end)
                task.wait(0.2)
            end
        end)
    end
})

-- üßæ ‡∏£‡∏∞‡∏ö‡∏ö Auto Quest
MainTab:CreateToggle({
    Name = "Auto Quest",
    CurrentValue = false,
    Callback = function(state)
        _G.AutoQuest = state
        local questName = "QUEST_INJURED MAN_1"

        local function startQuest()
            local args = {questName}
            ReplicatedStorage:WaitForChild("Questing"):WaitForChild("Networking"):WaitForChild("Remotes"):WaitForChild("QUESTING_START_QUEST"):FireServer(unpack(args))
            notify("üßæ Auto Quest", "‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏Ñ‡∏ß‡∏™‡πÉ‡∏´‡∏°‡πà‡πÅ‡∏•‡πâ‡∏ß", 3)
        end

        local function isQuestComplete()
            return ReplicatedStorage:WaitForChild("Questing"):WaitForChild("Networking"):WaitForChild("Remotes"):WaitForChild("QUESTING_IS_QUEST_COMPLETE"):InvokeServer()
        end

        local function onRespawn()
            if _G.AutoQuest then
                task.wait(1)
                startQuest()
            end
        end

        lp.CharacterAdded:Connect(onRespawn)

        if _G.AutoQuest then
            task.spawn(function()
                startQuest()

                while _G.AutoQuest do
                    if isQuestComplete() then
                        notify("‚úÖ ‡πÄ‡∏Ñ‡∏ß‡∏™", "‡πÄ‡∏Ñ‡∏ß‡∏™‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à! ‡∏£‡∏µ‡πÄ‡∏ã‡πá‡∏ï‡∏ï‡∏±‡∏ß‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏£‡∏±‡∏ö‡πÉ‡∏´‡∏°‡πà", 3)
                        if lp.Character and lp.Character:FindFirstChild("Humanoid") then
                            lp.Character.Humanoid:TakeDamage(lp.Character.Humanoid.Health)
                        end
                        task.wait(1.5)
                        startQuest()
                    end
                    task.wait(1)
                end
            end)
        end
    end
})
-- ‡∏™‡∏£‡πâ‡∏≤‡∏á‡πÅ‡∏ó‡πá‡∏ö Settings
local SettingsTab = Window:CreateTab("‚öôÔ∏è Settings")
local HttpService = game:GetService("HttpService")
local TeleportService = game:GetService("TeleportService")

SettingsTab:CreateButton({
    Name = "üîÑ ‡∏£‡∏µ‡∏à‡∏≠‡∏¢‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡πÉ‡∏´‡∏°‡πà (‡∏™‡∏∏‡πà‡∏°)",
    Callback = function()
        notify("üîÑ ‡∏£‡∏µ‡∏à‡∏≠‡∏¢‡πÉ‡∏´‡∏°‡πà", "‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡πÉ‡∏´‡∏°‡πà...", 3)
        task.spawn(function()
            local success, response = pcall(function()
                return HttpService:JSONDecode(game:HttpGet(
                    "https://games.roblox.com/v1/games/"..game.PlaceId.."/servers/Public?sortOrder=Asc&limit=100"
                ))
            end)

            if success and response and response.data then
                for _, server in ipairs(response.data) do
                    if server.playing < server.maxPlayers and server.id ~= game.JobId then
                        TeleportService:TeleportToPlaceInstance(game.PlaceId, server.id, lp)
                        return
                    end
                end
                notify("‚ùå ‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡πÉ‡∏´‡∏°‡πà", "‡∏•‡∏≠‡∏á‡πÉ‡∏´‡∏°‡πà‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏†‡∏≤‡∏¢‡∏´‡∏•‡∏±‡∏á", 4)
            else
                notify("‚ö†Ô∏è ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î", "‡πÇ‡∏´‡∏•‡∏î‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÄ‡∏ã‡∏¥‡∏£‡πå‡∏ü‡πÄ‡∏ß‡∏≠‡∏£‡πå‡∏•‡πâ‡∏°‡πÄ‡∏´‡∏•‡∏ß", 4)
            end
        end)
    end
})
